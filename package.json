{
	"name": "app",
	"private": true,
	"scripts": {
		"contember": "docker-compose run --rm contember-cli",
		"start": "npm run start-engine && concurrently npm:start-admin npm:start-website",
		"start-engine": "docker-compose up --detach && npm run contember migrations:execute -- --yes",
		"start-admin": "vite admin --port 1480 --host 0.0.0.0",
		"start-website": "next dev website",
		"dev": "npm run check-website-env && npm start",
		"check-website-env": "test -f ./website/.env.local || cp ./website/.env.local.example ./website/.env.local",
		"generate-schema": "ts-node scripts/generate-schema.ts",
		"check-admin": "tsc --project admin --noEmit",
		"check-api": "tsc --project api --noEmit",
		"check-website": "tsc --project website --noEmit && next lint website",
		"check-scripts": "tsc --project scripts --noEmit",
		"check": "npm run check-admin && npm run check-api && npm run check-website && npm run check-scripts",
		"fix": "next lint website --fix",
		"import-database": "ts-node scripts/import-database.ts",
		"build": "concurrently npm:build-admin npm:build-api npm:build-website",
		"build-admin": "tsc --project admin && vite build admin",
		"build-api": "tsc --project api",
		"build-website": "tsc --project website && next build website"
	},
	"dependencies": {
		"@types/inquirer": "^9.0.3",
		"@types/react-modal": "^3.13.1",
		"chalk": "^5.2.0",
		"inquirer": "^9.1.4",
		"next": "^13",
		"react": "^18",
		"react-dom": "^18",
		"react-modal": "^3.16.1",
		"use-countdown-control": "^0.1.0"
	},
	"devDependencies": {
		"@contember/admin": "^1.1.0-alpha.17",
		"@contember/admin-i18n": "^1.1.0-alpha.17",
		"@contember/client": "^1.1.0-alpha.17",
		"@contember/react-client": "^1.1.0-alpha.17",
		"@contember/schema": "^1.2.0-alpha.18",
		"@contember/schema-definition": "^1.2.0-alpha.18",
		"@next/bundle-analyzer": "^13.0.6",
		"@next/font": "^13.0.6",
		"@sentry/nextjs": "^7.24.1",
		"@tanstack/react-query": "^4.28.0",
		"@types/node": "^18",
		"@types/react": "^18",
		"@types/svg-sprite-loader": "^3.9.5",
		"@typescript-eslint/eslint-plugin": "^5.45.1",
		"@typescript-eslint/parser": "^5.45.1",
		"clsx": "^1.2.1",
		"concurrently": "^7.6.0",
		"dotenv": "^16.0.3",
		"eslint": "^8.29.0",
		"eslint-config-next": "^13.0.6",
		"eslint-plugin-prettier": "^4.2.1",
		"graphql-js-tree": "^0.1.9",
		"graphql-zeus": "^5.2.0",
		"next-transpile-modules": "^10.0.0",
		"nextjs-button-base": "^1.0.0",
		"prettier": "^2.8.1",
		"prettier-eslint": "^15.0.1",
		"react-use": "^17.4.0",
		"sass": "^1.56.1",
		"shared-loading-indicator": "^0.3.1",
		"svg-sprite-loader": "^6.0.11",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.3",
		"vite": "^3.2"
	}
}
